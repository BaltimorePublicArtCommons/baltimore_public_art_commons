<div class='wrapper twoway-split'>
  <%= image_tag @item_public_data.thumbnail_image %>
  <h2><%= @item_public_data.name %></h2>
</div>

<div class='wrapper twoway-split'>
  <dl>
    <dt><h3>Neighborhood</h3></dt>
    <dd><%= @item_public_data.neighborhood %></dd>

    <dt><h3>Installation Date</h3></dt>
    <dd><%= @item_public_data.installation_date %></dd>

    <dt><h3>Dimensions<h3></dt>
    <dd><%= @item_public_data.dimensions %></dd>

    <dt><h3>Material<h3></dt>
    <dd><%= @item_public_data.material %></dd>

    <dt><h3>Artists</h3></dt>
    <% @item_public_data.artists.each do |artist| %>
      <dd><%= artist %></dd>
    <% end %>
  </dl>
</div>
